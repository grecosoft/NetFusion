{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build:Solution.Context",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Solution.Context.WebApi/Solution.Context.WebApi.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build", "isDefault": true
            }
        },
        {
            "label": "buildForDebug",
            "command": "/bin/bash",
            "options": {
                "cwd": "${workspaceRoot}"
            },

            "args": [
                "-c",
                "./scripts/dockerTask.sh buildForDebug"
            ],
            "problemMatcher": []
        },
        {
            "label": "cleanup",
            "command": "/bin/bash",
            "args": [
                "-c",
                "./scripts/dockerTask.sh cleanup"
            ],
            "problemMatcher": []
        }
    ]
}